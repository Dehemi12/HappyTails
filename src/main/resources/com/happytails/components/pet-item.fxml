      <Pane prefHeight="188.0" prefWidth="550.0" style="-fx-background-radius: 30; -fx-background-color: #9B7EBD;">
         <children>
            <Label fx:id="nameLabel" layoutX="248.0" layoutY="25.0" text="Pet Name" textFill="WHITE">
