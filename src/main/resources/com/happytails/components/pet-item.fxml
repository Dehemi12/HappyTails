                  <Font name="System Bold" size="23.0" />
               </font>
            </Label>
            <Label fx:id="ageLabel" layoutX="248.0" layoutY="71.0" text="Pet Age" textFill="WHITE">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label fx:id="typeLabel" layoutX="248.0" layoutY="113.0" text="Type : Breed" textFill="WHITE">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Pane layoutX="6.0" layoutY="9.0" prefHeight="171.0" prefWidth="171.0" style="-fx-background-radius: 30; -fx-border-radius: 30;">
               <children>
                  <ImageView fx:id="petImage" fitHeight="156.0" fitWidth="158.0" layoutX="6.0" layoutY="8.0" pickOnBounds="true">
